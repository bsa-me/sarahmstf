<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="game_new_form">
            <field name="name">game.new.form</field>
            <field name="model">game.new</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
        <record id="action_game" model="ir.actions.act_window">
            <field name="name">game</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">game.new</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Game name!
                </p>
            </field>
        </record>

        <menuitem id="game_new_main_menu"
                  name="Game new"
                  sequence="1"/>

        <menuitem
                id="game_new_menu"
                name="Readable Text"
                action="action_game"
                parent="game_new_main_menu"
                sequence="1"/>
        <!--        groups="base.group_user"/>-->


    </data>
</odoo>
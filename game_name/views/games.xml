<?xml version="1.0" encoding="UTF-8" ?>
<odoo>


    <record id="view_sale_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
        <xpath expr="//field[@name='partner_id']" position="after">
            <field name="custom_field"/>
            <field name="somme"/>
            <fied name="saleordercount"/>
            <button name="createsaleorder" string="createsaleorder" type="object" class="btn-primary" />
            <field name="partner_id"/>
        </xpath>
        </field>
    </record>
    <record id="sale.action_orders" model="ir.actions.act_window">
        <field name="name">Appointment</field>
    </record>

    <record id="sale.menu_sale_quotations" model="ir.ui.menu">
        <field name="name">New Quotation</field>
    </record>

    <record id="view_purchase_order_inherit" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="sale_order_id"/>
                <field name="date_order"/>
                <field name="game_field"/>
            </xpath>
        </field>
    </record>


</odoo>